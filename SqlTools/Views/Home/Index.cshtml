@{
    ViewBag.Title = "Home Page";
}

@section featured {
<section class="featured">
    <div class="content-wrapper">
        <hgroup class="title">
            <h1>List to IN Query</h1>
        </hgroup>
        <p>
            This tool converts a list of text (one item per line) to a string perfect for doing IN queries with.  It trims all whitespace, and does not include blank lines.
        </p>
    </div>
</section>
}

<section class="features">
    <section class="feature">
        <h3>Original list:</h3>
        <textarea class="codeBox" data-bind="value: SourceText, valueUpdate: 'afterkeydown'"></textarea>
    </section>
    <section class="feature">
        <h3>Result:</h3>
        <textarea class="codeBox" data-bind="value: ProcessedText"></textarea>
        <div style="float: right"><span class="clippy tooltip" data-tooltip="Copy to clipboard"></span></div>
    </section>
</section>